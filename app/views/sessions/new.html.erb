<%= render "header" %>

<h4>Do not have an account yet?</h4>
<%= link_to "Sign up and start exploring Workaholic", new_user_path, class: "btn btn-primary" %>

<hr/>

<h4>Already have an account?</h4>
<%= form_for(:session, url: login_path) do |u| %>
  <div class="form-group">
    <%= u.label :email %>
    <%= u.text_field :email, class:"form-control", required: true %>
  </div>
  <div class="form-group">
    <%= u.label :password %>
    <%= u.password_field :password, class:"form-control", required: true %>
  </div>
  <%= u.submit "Log in", class:"btn btn-primary" %>
<% end %>

<%= render "footer" %>
