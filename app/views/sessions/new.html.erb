<%= render "header" %>

<h3><strong>Log in</strong></h3>

<hr>

<%= form_for(:session, url: login_path) do |u| %>
  <div class="form-group">
    <%= u.label :email %>
    <%= u.text_field :email, class:"form-control", required: true %>
  </div>
  <div class="form-group">
    <%= u.label :password %>
    <%= u.password_field :password, class:"form-control", required: true %>
  </div>
  <%= u.submit "Log in", class:"btn btn-primary" %>
<% end %>

<hr>

<h5><strong>Do not have a Workaholic account yet?</strong></h5>
<%= link_to "Sign up and start exploring Workaholic", new_user_path, class: "btn btn-default" %>

<%= render "footer" %>
