<%= form_for @user, html: { id: "needs-validation", novalidate: "novalidate" } do |u| %>
  <div class="form-group">
    <span class="form-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span>
    <%= u.label :email %>
    <%= u.text_field :email, class: 'form-control', placeholder: 'steven_halim@nus.edu.sg', required: true %>
  </div>
  <div class="form-group">
    <span class="form-group-addon"><i class="fa fa-pencil fa-fw"></i></span>
    <%= u.label :name %>
    <%= u.text_field :name, class: 'form-control', placeholder: 'Steven Halim' %>
  </div>
  <div class="form-group">
    <span class="form-group-addon"><i class="fa fa-key fa-fw"></i></span>
    <%= u.label :password %>
    <%= u.password_field :password, class: 'form-control', placeholder: 'i_can_do_it' %>
  </div>
  <div class="form-group">
    <span class="form-group-addon"><i class="fa fa-key fa-fw"></i></span>
    <%= u.label :password_confirmation %>
    <%= u.password_field :password_confirmation, placeholder: 'i_can_do_it', class: 'form-control' %>
  </div>
  <%= u.submit "Sign up", class: 'btn btn-primary' %>
<% end %>
