<%= render "header", title: "Profile", show: true %>

<div class="form-group">
  <%= label_tag :email %>
  <%= text_field_tag :email, @user.email, class: 'form-control', disabled: "disabled" %>
</div>
<div class="form-group">
  <%= label_tag :name %>
  <%= text_field_tag :name, @user.name, class: 'form-control', disabled: "disabled" %>
</div>
<%= link_to "Update details", edit_user_path(current_user, change: "details"), class: "btn btn-primary" %>
<%= link_to "Change password", edit_user_path(current_user, change: "password"), class: "btn btn-primary" %>

<%= render "footer" %>
