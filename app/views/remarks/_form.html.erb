<%= form_with model: [ @item, @item.remarks.build ], html: { id: "needs-validation", novalidate: "novalidate" } do |form| %>

<div class="form-group">
<span class="form-group-addon"><i class="fa fa-edit fa-fw"></i></span>
    <%= form.label :body %>
    <%= form.text_area :body, 
                        class: 'form-control', 
                        placeholder: 'Remarks for the task', 
                        style: 'height: 125px;',
                        required: true %>
  <div class="invalid-feedback">
    Compulsory field.
  </div>
</div>

<div class="form-group">
<span class="form-group-addon"><i class="fa fa-calendar-check-o fa-fw"></i></span>
    <%= form.label :date %>
    <%= form.text_field :date, 
                         class: 'form-control', 
                         placeholder: 'dd/mm/yyyy', 
                         data: {provide: "datepicker", date_format: 'dd/mm/yyyy'}, 
                         required: true, readonly: true %>
  <div class="invalid-feedback">
    Please provide a valid date.
  </div>
</div>
<%= form.submit "Submit", class: 'btn btn-default' %>

<% end %>
