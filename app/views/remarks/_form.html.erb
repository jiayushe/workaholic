<%= form_with model: [ @item, @item.remarks.build ], html: { id: "needs-validation", novalidate: "novalidate" } do |form| %>

  <div class="form-row">
    <div class="col-md">
      <div class="form-group">
        <%= form.label :body %>
	<%= form.text_area :body, 
	    class: 'form-control', 
	    placeholder: 'Remarks for the task', 
	    style: 'height: 125px;',
	    required: true %>
        <div class="invalid-feedback">
          Compulsory field.
        </div>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group">
        <%= form.label :date %>
        <%= form.text_field :date, 
            class: 'form-control', 
            placeholder: 'dd/mm/yyyy', 
            data: {provide: "datepicker", date_format: 'dd/mm/yyyy'}, 
            required: true, readonly: true %>
        <div class="invalid-feedback">
          Please provide a valid date.
        </div>
      </div>
    </div>
  </div>
    <%= form.submit "Submit", class: 'btn btn-default' %>
  </div>
<% end %>
